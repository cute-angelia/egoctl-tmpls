package router

import (
	"github.com/go-chi/chi/v5"
	"{{packagePath}}/pkg/router/api"
)

// {{apiPrefix}}
func Init{{modelName|upperFirst}}(r *chi.Mux) {
	r.Mount("/{{modelName}}", {{modelName}}Router())
}

func {{modelName}}Router() chi.Router {
	r := chi.NewRouter()
	// 中间件
	// r.Use(AdminOnly)
	r.Post("/info", api.{{modelName|upperFirst}}Info)
	r.Post("/delete", api.{{modelName|upperFirst}}Delete)
	r.Post("/listByPage", api.{{modelName|upperFirst}}List)
	r.Post("/createOrUpdate", api.{{modelName|upperFirst}}CreateOrUpdate)

	return r
}
